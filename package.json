{
  "name": "v-collab",
  "displayName": "VCollab",
  "description": "VIETIS AI powered collaborative chat for developers",
  "version": "1.0.2",
  "license": "MIT",
  "publisher": "vietis",
  "engines": {
    "vscode": "^1.94.0"
  },
  "packageManager": "yarn@1.22.22",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "icon": "public/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "chat"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn compile-tests && yarn compile && yarn lint",
    "lint": "eslint src",
    "test": "vscode-test",

    "start-live": "webpack-dev-server --mode development --open --hot --config webpack.webview.config.js",
    "build": "webpack-dev-server --mode production",
    "build-webview": "webpack --mode production --config webpack.webview.config.js",
    "build-ext": "webpack --mode production",
    "start-ext": "webpack serve --mode development",
    "copy-icons": "cp src/webview/codicons/* dist/"
  },
  "contributes": {
    "commands": [
      {
        "command": "v-collab.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
